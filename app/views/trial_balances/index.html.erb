<%- model_class = TrialBalance -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:year) %></th>
      <th><%= model_class.human_attribute_name(:month) %></th>
      <th><%= model_class.human_attribute_name(:worked_hours) %></th>
      <th><%= model_class.human_attribute_name(:hour_price) %></th>
      <th><%= model_class.human_attribute_name(:total) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @trial_balances.each do |trial_balance| %>
      <tr>
        <td><%= link_to trial_balance.id, trial_balance_path(trial_balance) %></td>
        <td><%= trial_balance.year %></td>
        <td><%= trial_balance.month %></td>
        <td><%= trial_balance.worked_hours %></td>
        <td><%= trial_balance.hour_price %></td>
        <td><%= trial_balance.total %></td>
        <td><%=l trial_balance.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_trial_balance_path(trial_balance), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      trial_balance_path(trial_balance),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_trial_balance_path,
            :class => 'btn btn-primary' %>
