<%= form_for @trial_balance, :html => { :class => "form-horizontal trial_balance", "ng-app" => "trialBalance", "ng-controller" => "TrialBalanceController", "ng-init" => "totalHours=" + @trial_balance.totalHours.to_s } do |f| %>

    <% if @trial_balance.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@trial_balance.errors.count, "error") %> prohibited this trial_balance from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @trial_balance.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :year, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <%= error_span(@trial_balance[:year]) %>
  </div>
  <div class="control-group">
    <%= f.label :month, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :month, :class => 'form-control' %>
    </div>
    <%= error_span(@trial_balance[:month]) %>
  </div>
  <div class="control-group">
    <%= f.label :totalHours, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :totalHours, 
        :class => 'form-control', 
        "ng-model" => "totalHours" %>
    </div>
    <%= error_span(@trial_balance[:totalHours]) %>
  </div>
  <div class="control-group">
    <%= f.label :valueHour, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valueHour, 
        :class => 'form-control', 
        "ng-model" => "valueHour",
        "ng-bind" => "valueHour",
        "ng-change" => "calcTotal()" %>
    </div>
    <%= error_span(@trial_balance[:valueHour]) %>
  </div>
  <div class="control-group">
    <%= f.label :valueMonth, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :valueMonth, 
        :class => 'form-control', 
        "ng-bind" => "totalValue" %>
    </div>
    <%= error_span(@trial_balance[:valueMonth]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            trial_balances_path, :class => 'btn btn-default' %>

<% end %>
